<%= form_with(model: movie, local: true, :class => 'form-horizontal', :method=>'post', :url=> movies_path) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, :class => "form-control", :placeholder => "Example: Die hard" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :image, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :image, :class => "form-control", :placeholder => "Example: image.png"  %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :theater, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :theater, :class => "form-control", :placeholder => "Example: Sala1;Sala2;Sala3" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :schedule, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :schedule, :class => "form-control", :placeholder => "Example: Matine;Tanda;Noche" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Accept", :class => 'btn btn-default'%>
    <%= link_to 'Back', movies_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
