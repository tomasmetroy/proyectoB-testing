<h1>Showtimes</h1>
<div class="col-md-8">
  <h2>Today's showtimes</h2>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Movie</th>
      <th>Schedule</th>
      <th>Theater</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
      <% @showtimes.each do |showtime| %>
        <tr>
          <td class="name"><%= showtime.movie.name %></td>
          <td class="schedule"><%= showtime.schedule %></td>
          <td class="theater"><%= showtime.theater %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

