<h1>Showtimes</h1>
<div class="col-md-8">
  <h2>Today's showtimes</h2>
  <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Movie</th>
      <th>Schedule</th>
      <th>Theater</th>
      <th>Buy Ticket</th>
      <th>View Tickets</th>
    </tr>
    </thead>
    <tbody>
      <% @showtimes.each do |showtime| %>
        <tr>
          <td class="name"><%= showtime.movie.name %></td>
          <td class="schedule"><%= showtime.schedule %></td>
          <td class="theater"><%= showtime.theater %></td>
          <td>
            <%= link_to 'Buy Ticket', new_showtime_ticket_path(showtime_id: showtime.id),:class => 'btn btn-default' %>
          </td>
          <td>
            <%= link_to 'View Tickets', showtime_tickets_path(showtime_id: showtime.id),:class => 'btn btn-default' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

